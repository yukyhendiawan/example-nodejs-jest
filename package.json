{
	"name": "example-nodejs-jest",
	"version": "1.0.0",
	"description": "A simple Node.js project with Jest for unit testing",
	"type": "module",
	"scripts": {
		"test": "jest"
	},
	"jest": {
		"verbose": true,
		"transform": {
			"^.+\\.[t|j]sx?$": "babel-jest"
		},
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		},
		"collectCoverageFrom": [
			"src/**/*.{js,jsx}"
		]
	},
	"author": "Yuky Hendiawan",
	"devDependencies": {
		"@babel/preset-env": "^7.24.5",
		"babel-jest": "^29.7.0",
		"conventional-commits-parser": "^6.0.0",
		"jest": "^29.7.0"
	}
}
